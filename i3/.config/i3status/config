# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
        interval = 5
}

order += 'volume master'
order += "memory"
order += "battery all"
order += "tztime local"

memory {
    format = "%used"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}


battery all {
    format = "%percentage"
}

tztime local {
    format = "%V  %A %e %B   %H:%M"
}

volume master {
    format = "%volume  "
    device = "default"
    mixer = "Master"
}

